# params from the flavor executable
FLAVOR=`flavor`
MODULE_EXT=`flavor -m`

# A few parameters from emc2/Makefile.inc
EMC2_HOME=@EMC2_HOME@
RTLIB_DIR=@EMC2_RTLIB_DIR@
USE_PORTABLE_PARPORT_IO=@USE_PORTABLE_PARPORT_IO@
TARGET_PLATFORM=@TARGET_PLATFORM@
ARCHITECTURE=@ARCHITECTURE@
GIT_VERSION=@GIT_VERSION@

# shared memory kernel driver
USE_SHMDRV=@USE_SHMDRV@

# fixme make param
HAL_SIZE=512000

# Sets the default DEBUG level
DEBUG='1'

# Path to the realtime kernel modules
MODPATH=@MODULE_DIR@

# List of realtime kernel modules to be loaded
if [ "$FLAVOR" = rtai-kernel ] ; then \
    MODULES="adeos rtai_hal rtai_ksched rtai_fifos rtai_shm rtai_sem rtai_math"
    MODPATH_adeos=@MODPATH_adeos@
    MODPATH_rtai_hal=@MODPATH_rtai_hal@
    MODPATH_rtai_ksched=@MODPATH_rtai_ksched@
    MODPATH_rtai_fifos=@MODPATH_rtai_fifos@
    MODPATH_rtai_shm=@MODPATH_rtai_shm@
    MODPATH_rtai_sem=@MODPATH_rtai_sem@
    MODPATH_rtai_math=@MODPATH_rtai_math@
elif [ "$FLAVOR" = xenomai-kernel ] ; then
    MODULES="xeno_math"
fi
